imagedeps="ninja"
hostdeps="gcc cmake pkg-config"
deps="core-libs"

build() {
    cmake_configure
    cmake --build . -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" cmake --install .

    post_package_strip
}
