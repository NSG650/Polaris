name=at-spi2-core
version=2.58.1
revision=1
git_url="https://gitlab.gnome.org/GNOME/at-spi2-core.git"
commit=1c403959184b36a2d146840254b7a69dd080ec40
imagedeps="libglib2.0-dev"
hostdeps="gcc pkg-config"
deps="core-libs bash dbus glib gsettings-desktop-schemas libx11 libxi libxkbcommon libxml libxtst"

build() {
    meson_configure \
        -Dsystemd_user_dir=/tmp \
        -Dintrospection=disabled

    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
